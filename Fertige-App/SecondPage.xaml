<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schoen.BlackJAck.SecondPage"
             Title="SecondPage"
             BackgroundColor="Green">
    <VerticalStackLayout>
        <Border>
            
        </Border>
        <Label Text="Betrag: "
						   FontAttributes="Bold"
						   VerticalOptions="Center"
						   HorizontalOptions="Center" 
						   TextColor="Black"
						   FontSize="20"/>
        <Border BackgroundColor="Green" WidthRequest="150">
            <Entry Text=""
                       x:Name="entryAdd"
					   FontAttributes="Bold"
					   WidthRequest="100" 
                       TextColor="Black"
                       FontSize="20"
                       HorizontalOptions="Center"/>
        </Border>
        
        <Label WidthRequest="80">
            
        </Label>
        <Button x:Name="btnEinzahlen" 
							Text="Einzahlen" 
							WidthRequest="200"
							Clicked="btnEinzahlen_Clicked"
							FontSize="20"/>

    </VerticalStackLayout>
</ContentPage>